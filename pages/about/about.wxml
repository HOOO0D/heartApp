<view class="container">
  <view class="toolbar">
    <button class="clear-btn" bindtap="clearRecords">清空数据</button>
  </view>

  <scroll-view scroll-y="true" class="data-list">
    <view wx:for="{{records}}" wx:key="index" class="data-item">
      <view class="timestamp">{{item.time}}</view>
      <view class="values">
        <text>val1: {{item.val1}}</text>
        <text>val2: {{item.val2}}</text>
        <text>val3: {{item.val3}}</text>
        <text>val4: {{item.val4}}</text>
      </view>
    </view>
  </scroll-view>
</view>
